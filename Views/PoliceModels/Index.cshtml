@model IEnumerable<FBIApplication.Models.PoliceModel>

@{
    ViewData["Title"] = "Index";
}

<!----<h1>Index</h1>-->
<style>
    body {
        /*background-image: url('/Views/PoliceModels/PEDimage\ 1.png');
        background-image: url('https://metro.co.uk/wp-content/uploads/2017/05/pri_41190515.jpg?quality=80&strip=all');*/
        background-image: url('/css/PEDimage1.png');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
        /*background-image: url('PEDimage1.png');
        */
    }
    h2 {
        outline-style: hidden;
        outline-color: #92a8d1;
        text-decoration-color: linen;
    }
    table {
        width: 100%;
    }

    table, th, td {
        border: 1px solid white;
        border-collapse: collapse;
    }

    th, td {
        padding: 15px;
        text-align: center;
        color:wheat;
    }

</style>

<body>
    <h2 style="text-align: center; color:wheat; size: 20px;"><strong>Police Employment Data</strong> </h2>
    <p>
        <a asp-action="Create" style="color:gold">Create New</a>
    </p>
    <table class="table table-hover" id="t01" style="opacity: 0.8;">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.data_year)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.population)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.officer_count)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.officer_rate_per_1000)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.data_year)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.population)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.officer_count)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.officer_rate_per_1000)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.PoliceModelID" style="color:gold">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.PoliceModelID" style="color:gold">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.PoliceModelID" style="color:gold">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br>
    <p1 style="color:gold;"><strong> This Data shows the Distribution of the Police in the United States and It Segregates the Number of Police Offericers in the States.We can infer that the number of officers a increasing trend as law enforcement agencies are becoming more efficient over the years</strong></p1>

</body>